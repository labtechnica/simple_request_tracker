
<table id="table_tasks" class="table table-striped table-bordered table-hover table-condensed display">
  <thead>
    <tr>
      <th>System</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Entered By</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @tasks.each do |task| %>
  <tr class="<%= task.color_code %>">
    <td><%= task.system.name %></td>
    <td><%= task.description %></td>
    <td><%= task.due_date %></td>
    <td><%= task.user.name %></td>
    <td><a href="<%= edit_task_path(task) %>" class="icon-pencil" data-toggle="tooltip" title="Edit"></a></td>
    <td><a href="<%= task_path(task) %>" class="icon-comment" data-toggle="tooltip" title="View/Comments"></a></td>
  </tr>
<% end %>
</table>
